{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "reset mcu",
      "type": "shell",
      "command": "probe-rs reset --chip STM32G474CETX"
    },
    {
      "label": "attach debug",
      "type": "shell",
      "command": "probe-rs attach --chip STM32G474CETx ./target/thumbv7em-none-eabi/debug/${workspaceFolderBasename}"
    },
    {
      "label": "attach release",
      "type": "shell",
      "command": "probe-rs attach --chip STM32G474CETx ./target/thumbv7em-none-eabi/release/${workspaceFolderBasename}"
    }
  ]
}